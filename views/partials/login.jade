md-dialog(aria-label="Sign In Dialog",  ng-cloak)
   md-toolbar
      div(class="md-toolbar-tools")
         h2 Authenticate
         span(flex)
         md-button(class="md-icon-button", ng-click="cancel()")
            md-icon(md-svg-src="img/icons/ic_clear_white_24px.svg", aria-label="Close dialog")
   div(ng-show="showLoading", layout="row", layout-sm="column", layout-align="center center")
      md-progress-circular(md-mode="indeterminate")
   md-dialog-content(style="max-width:800px;max-height:810px; ")
      div(id="signin_parent",class="md-dialog-content")
         md-tabs(md-dynamic-height, md-border-bottom)
            md-tab(label="Sign In")
               form(name="form_signin",ng-submit="validSignin(form_signin.$valid)", novalidate)
                  md-content(layout-padding)
                     div(layout, layout-sm="row")
                        md-input-container(ng-class="{ 'has-error' : form_signin.username.$invalid && !form_signin.username.$pristine && form_signin.username.$touched }")
                           label Username
                           input.signinInput(ng-model="credentials.username", type="text", name="username", ng-required="true", ng-minlength="3", ng-maxlength="30")
                           div(ng-messages="form_signin.username.$error",ng-show="form_signin.username.$touched")
                              p(ng-message="required", class="help-block")
                                 | Username is required
                              p(ng-message="minlength", class="help-block")
                                 | Username is too short
                              p(ng-message="maxlength", class="help-block")
                                 | Username is too long
                     div(layout, layout-sm="row")
                        md-input-container(layout-sm="row",ng-class="{ 'has-error' : form_signin.password.$invalid && !form_signin.password.$pristine && form_signin.password.$touched }")
                           label Password
                           input.signinInput(ng-model="credentials.password", type="password", name="password", ng-required="true", ng-minlength="5", ng-maxlength="30")
                           div(ng-messages="form_signin.password.$error",ng-show="form_signin.password.$touched")
                              p(ng-message="required", class="help-block")
                                 | Password is required
                              p(ng-message="minlength", class="help-block")
                                 | Password is too short
                              p(ng-message="maxlength", class="help-block")
                                 | Password is too long
                  div(class="md-dialog-actions", layout="row")
                     span(flex)
                     md-button(type="submit", style="margin-right:20px;")
                        |Sign In
            md-tab(label="Sign Up")
               form(name="form_signup",ng-submit="validSignup(form_signup.$valid)", novalidate)
